package com.ekinoksyazilim.etkk.prototype.configuration;

import java.awt.Color;

public class Configuration extends AbstractConfiguration {

	@config("example.string")
    public String STRING_EXAMPLE = "some string";
	
	@config("example.integer")
    public Integer INTEGER_EXAMPLE = 5;
	
	@config("example.color")
    public Color COLOR_EXAMPLE = Color.BLACK;
	
	public Configuration() {
		
		load();
	}
	
	@Override
	protected String getPath() {
		
		return "config.xml";
	}
}
